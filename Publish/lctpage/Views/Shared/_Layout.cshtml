<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Điện thoại  di động</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel=" stylesheet" href="~/Content/Style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;1,600&display=swap" rel="stylesheet">
    @using Ictshop.Models

    <style type="text/css">
        body {
            background-color: rgb(229 231 235);
        }

        .navbar-inverse {
            background-color: #585858;
            border-color: #585858;
            outline: none;
            box-shadow: rgba(0, 0, 0, 0.07) 0px 1px 2px, rgba(0, 0, 0, 0.07) 0px 2px 4px, rgba(0, 0, 0, 0.07) 0px 4px 8px, rgba(0, 0, 0, 0.07) 0px 8px 16px, rgba(0, 0, 0, 0.07) 0px 16px 32px, rgba(0, 0, 0, 0.07) 0px 32px 64px;
        }

        .top_header {
            background-color: black;
            padding-left: 110px;
            color: white;
        }

        .form-inline {
            float: right;
            padding-top: 10px;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: x-large;
        }

        .navbar-inverse .navbar-brand {
            color: white;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: large;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: black;
            }

        .navbar-brand {
            color: cadetblue;
        }

        .spnoibat {
            background-color: white;
        }

            .spnoibat h3 {
                padding-left: 30px;
            }

        .giohang {
            color: white;
        }
        .container-fluid {
            background-color: transparent;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-direction: row;
        }
        footer {
            background-color: azure;
            margin-top: 3rem;
            box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
        }
    </style>



</head>

<body>

    @{
        var u = Session["use"] as Ictshop.Models.Nguoidung;
    }
        
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="navbar-brand" src="~/HinhanhSP/logo1.jpg" width="50" height="50" style="padding:0" />
                @Html.ActionLink(" dotNetPhone", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <form class="form-inline" style="float:left">
                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                    @*<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>*@
                </form>

            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" title="dienthoai">
                            @*<span><i class=" glyphicon-music "></i></span>*@
                            <span>ĐIỆN THOẠI</span>

                        </a>
                        @*<span><i class=" glyphicon-music "></i> </span>
                            <br />
                            <span>@Html.ActionLink("Trang chủ", "Index", "Home") </span>*@
                    </li>
                    <li>
                        <a href="#" title="LAPTOP">
                            @*<span><i class="fas fa-tablet"></i></span>*@
                            <span>LAPTOP</span>

                        </a>

                    </li>
                    <li>
                        <a href="#" title="PHUKIEN">
                            @*<span><i class="fas fa-desktop"></i></span>*@
                            <span>PHỤ KIỆN</span>

                        </a>
                    </li>
                    <li>
                        <a href="/Home/Contact" title="LIENHE">
                            @*<span><i class="fas fa-headphones"></i></span>*@
                            <span>LIÊN HỆ</span>

                        </a>
                    </li>
              
                    <li>
                        @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                    </li>
                    <li>
                        <div>

                            @{
                                if (u != null)
                                {
                            <li>
                                Xin chào : @u.Email
                                &nbsp;
                                @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                                <a style="color:red" href="/User/DangXuat"> ĐĂNG XUẤT</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <div class="d-flex flex-row">
                                    <a class="p-2" style="color:white" href="/User/Dangky"> Đăng ký</a>
                                    &nbsp;
                                    <a class="p-2" style="color:white" href="/User/Dangnhap"> Đăng nhập</a>
                                </div>
                            </li>


                        }
                            }
                    </div>


                    </li>
            


                    </ul>

                </div>
            </div>

            <br>

            <div class="container body-content">
                @RenderBody()  
            </div>

            <footer class="container" style="padding-left:50px">
                <div class="container-fluid">
                    <div class="col-md-3 col-sm-6">
                        <h2>Bảo hành</h2>
                        <span>Chính sách mua hàng</span>
                        <br />
                        <span>Chính sách bảo hành</span>
                        <br />
                        <span>Trung tâm bảo hành</span>
                        <br />
                        <span>Tra cứu bảo hành</span>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <h2>Liên kết</h2>
                        <span>Tin tức Mobile</span>
                        <br />
                        <span>Lập trình Web</span>
                        <br />
                        <span>GenkVN</span>
                        <br />
                        <span>Dân trí</span>


                    </div>
                    <div class="col-md-3 col-sm-6">
                        <h2>Thông tin</h2>
                        <span>Về chúng tôi</span>
                        <br />
                        <span>Liên hệ</span>
                        <br />
                        <span>Góp ý</span>
                        <br />
                        <span>Tra cứu</span>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <h2>Theo dõi</h2>
                        <span>Kênh youtube</span>
                        <br />
                        <span>Fanpage</span>
                        <br />
                        <span>Shopee</span>
                        <br />
                        <span>Group</span>

                    </div>
                </div>
                <hr />
             
            </footer>



            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </body>
    </html>
